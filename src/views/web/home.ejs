                            <form action="">
                                <button class="bg-tomato task-button" type="submit">
                                    <i class="fas fa-check-square"></i>
                                </button>
                            </form>
                        </div>
                        <div>
                            <form action="">
                                <button class="bg-tomato task-button" type="submit">
                                    <i class="fas fa-pen-square"></i>
                                </button>
                            </form>
                        </div>
                        <div>
                            <form action="">
                                <button class="bg-tomato task-button" type="submit">
                                    <i class="fas fa-trash-alt"></i>
